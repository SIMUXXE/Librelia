@model List<Reservation>
@{
    ViewData["Title"] = "Prenotazioni";
}
@if (Model.Count() > 0)
{
    <div class="row">
        <table class="table table-striped">
            <tr>
                <td>Id prenotazione</td>
                <td>Utente</td>
                <td>Libro</td>
                <td>Data di registrazione</td>
                <td>Data di scadenza</td>
                <td>Stato</td>
            </tr>
            @{
                foreach (Reservation obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.UserMail</td>
                        <td>@obj.BookTitle</td>
                        <td>@obj.RegDate</td>
                        <td>@obj.ExpDate</td>
                        @{
                            switch (obj.BookState)
                            {
                                case 0:
                                    <td style="background-color:lightgreen">Disponibile</td>
                                    break;
                                case 1:
                                    <td style="background-color:yellow">Prenotato</td>
                                    break;
                                case 2:
                                    <td style="background-color:lightcoral">In prestito</td>
                                    break;
                            }
                        }
                        <td>
                            <a asp-action="ResManager" asp-controller="Admin" asp-route-id="@obj.Id" class="btn btn-secondary">Gestisci</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
}
else
{
    <h1>Attualmente non sono registrate Prenotazioni</h1>

    <div aria-label="Orange and tan hamster running in a metal wheel" role="img" class="wheel-and-hamster">
        <div class="wheel"></div>
        <div class="hamster">
            <div class="hamster__body">
                <div class="hamster__head">
                    <div class="hamster__ear"></div>
                    <div class="hamster__eye"></div>
                    <div class="hamster__nose"></div>
                </div>
                <div class="hamster__limb hamster__limb--fr"></div>
                <div class="hamster__limb hamster__limb--fl"></div>
                <div class="hamster__limb hamster__limb--br"></div>
                <div class="hamster__limb hamster__limb--bl"></div>
                <div class="hamster__tail"></div>
            </div>
        </div>
        <div class="spoke"></div>
    </div>
}
