@model Libreria_Elia_V0._0.Models.Reservation
@{
    ViewData["Title"] = $"pratica: {Model.Id}";
}

<head>
    <style>
        .container {
            max-width: 800px;
            margin: auto;
        }

        .user-info {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-container {
            margin-top: 20px;
            text-align: center;
            text-align: left;
        }

        .btn {
            margin-bottom: 5px;
        }
    </style>
</head>

<div class="container">
    <div class="user-info">
        <h3>Informazioni Pratica:</h3>
        <p>Email: @Model.UserMail</p>
        <p>Libro: @Model.BookTitle</p>
        @{
            switch (Model.BookState)
            {
                case 1:
                    <p>Stato volume: prenotato</p>
                    break;
                case 2:
                    <p>Stato volume: in prestito</p>
                    break;
            }
        }
        <p>id: @Model.Id</p>
        <span class="text-success">Data registrazione:</span>
        <p>@Model.RegDate</p>
        <span class="text-danger">Data scadenza:</span>
        <p>@Model.ExpDate</p>
    </div>

    <div class="btn-container">
        <a asp-action="MarkAsCollected" asp-controller="Admin" class="btn btn-secondary" asp-route-id="@Model.Id" asp-route-bId="@Model.BookId">contrassegna come ritirato</a><br />
        <a asp-action="DeleteRes" asp-controller="Admin" class="btn btn-secondary" asp-route-id="@Model.Id" asp-route-bId="@Model.BookId">Contrassegna come restituito</a><br />
        <a asp-action="DeleteRes" asp-controller="Admin" class="btn btn-danger" asp-route-id="@Model.Id" asp-route-bId="@Model.BookId">Cancella prenotazione</a><br />
    </div>
</div>